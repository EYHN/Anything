{
  "name": "anything",
  "repository": "https://github.com/EYHN/Anything",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "codegen": "pnpm run codegen:web && pnpm run codegen:shared",
    "codegen:web": "pnpm run exec:web codegen",
    "codegen:shared": "pnpm run exec:shared generate",
    "dev": "pnpm run exec:web dev",
    "check": "pnpm run check:format && pnpm run check:lint && pnpm run check:type",
    "check:format": "prettier --ignore-path .eslintignore --config ./.prettierrc.json ./**/*.{ts,tsx,js} --check",
    "check:lint": "eslint ./**/*.{ts,tsx,js}",
    "check:type": "pnpm run exec:web check:type",
    "build": "pnpm run build:web",
    "build:web": "pnpm run exec:web build",
    "exec:web": "pnpm run --filter @anything/web",
    "exec:shared": "pnpm run --filter @anything/shared"
  },
  "devDependencies": {
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.9.1",
    "prettier": "^2.3.2",
    "typescript": "4.4.0-beta",
    "ts-node": "^10.2.0"
  }
}
