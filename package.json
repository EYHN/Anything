{
  "name": "anything",
  "private": true,
  "repository": "https://github.com/EYHN/Anything",
  "license": "AGPL-3.0",
  "scripts": {
    "codegen": "lerna exec --scope anything-web -- npm run codegen",
    "dev": "lerna exec --scope anything-web -- npm run dev",
    "postinstall": "lerna bootstrap",
    "check": "npm run check:format && npm run check:lint",
    "check:format": "prettier --config ./.prettierrc.json './anything-web/**/*.{ts,tsx,js}' --check",
    "check:lint": "eslint './anything-web/**/*.{ts,tsx,js}'",
    "build": "npm run build:web",
    "build:web": "lerna exec --scope anything-web -- npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  }
}
