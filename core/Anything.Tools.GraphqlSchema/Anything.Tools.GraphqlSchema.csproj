<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <CodeAnalysisRuleSet>../../default.ruleset</CodeAnalysisRuleSet>
    <LangVersion>9</LangVersion>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <AssemblyName>Anything.Tools.GraphqlSchema</AssemblyName>
    <RootNamespace>Anything.Tools.GraphqlSchema</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Anything.Server\Anything.Server.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GraphQL.SystemTextJson" Version="4.5.0" />
  </ItemGroup>

</Project>
